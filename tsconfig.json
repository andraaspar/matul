{
	"compilerOptions": {
		"target": "ES5",
		"module": "ES2020",
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "types"
	},
	"include": ["src/**/*", "extra-types"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
